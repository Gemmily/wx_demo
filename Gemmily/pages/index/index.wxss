/**index.wxss**/

.container {
  background: #ddd;
  height:100%
}

.home-item {
  margin-bottom: 10rpx;
  background: #fff;
  width: 95%;
  padding: 12px 10px 10px 10px;
  flex-direction: column;
  flex-wrap: wrap;
  display: flex;
}

.avatar {
  flex-direction: row;
  height: 40rpx;
  align-items: center;
  display: flex;
}

.icon {
  width: 45rpx;
  height: 45rpx;
  border-radius: 45rpx;
  margin-right: 10rpx;
}

.text {
  color: #a0acac;
  font-size: 26rpx;
}

.title {
  font-size: 15px;
  color: #333;
  padding-top: 10rpx;
}

.memo {
  font-size: 26rpx;
  color: #a0acac;
  padding-top: 10rpx;
}
