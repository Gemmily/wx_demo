.item-view {
  background: #fff;
  width: 750rpx;
  margin-bottom: 1px;
  padding-left: 20px;
  height: 60px;
  align-items: center;
  display: flex;
}

.container {
  background: #ddd;
  display: flex;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20px;
}

.title {
  text-align: left;
  font-size: 34rpx;
  color: #6d6d6d;
}

.user {
  width: 725rpx;
  background: #fff;
  padding: 30rpx 25rpx 30rpx 0;
  margin: 15rpx 0;
  display: flex;
  align-items: center;
}

.user-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 80rpx;
  margin-right: 20px;
  margin-left: 20px;
}

.item-user {
  flex-direction: column;
  display: flex;
}

.user-name {
  padding: 8rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #818a8f;
}

.user-edit {
  font-size: 32rpx;
  color: #bababa;
}
