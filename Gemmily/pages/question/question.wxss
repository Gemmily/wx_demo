.container {
  padding: 10px 20px 0 10px;
  height: 100%;
}

.tag {
  display: flex;
  margin-bottom: 15px;
}

.tag text {
  height: 14px;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  margin: 0 10px 0 0;
  background: #eef5f8;
  color: #2186e0;
  font-size: 28rpx;
  vertical-align: middle;
}

.title {
  color: #333;
  font-size: 18px;
}

.icon {
  display: flex;
  margin: 10px 0 10px 0;
  width: 100%;
}

.image {
  width: 44rpx;
  height: 44rpx;
  margin-right: 8px;
}

.follow {
  position: absolute;
  right: 10px;
  padding: 20rpx 55rpx;
  color: #fff;
  background: #52c980;
  border-radius: 3px;
  font-size: 26rpx;
}

.invite {
  display: flex;
  width: 100%;
  margin-top: 15px;
}

.style {
  flex: 1;
  display: flex;
  justify-content: center;
  border: 1px solid #ddd;
  padding: 10px 0 10px 0;
}

.item {
  border-top: 4px solid #ddd;
  padding: 15px 20px 10px 20px;
  display: flex;
  flex-direction: column
}

.avatar {
  width: 20px;
  height: 20px;
}
