/* components/dialog/dialog.wxss */

.background {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 2;
  background: rgba(0, 0, 0, 0.2);
}

.container {
  width: 70%;
  position: fixed;
  z-index: 3;
  background: #fff;
  border-radius: 4px;
  top: 50%;
  margin: -100px 15% 0 15%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.button {
  flex: 1;
  direction: flex;
  justify-content: center;
  padding: 8px 0 8px 0;
  font-size: 14px;
  color: #333;
  border-radius: 0;
}

.toast {
  position: fixed;
  top: 45%;
  width: 50%;
  left: 25%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 5;
  text-align: center;
  color: #fff;
  padding:10px 0 10px 0;
  border-radius: 4px
}
